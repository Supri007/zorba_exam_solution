<?xml version='1.0' encoding='UTF-8'?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="java.entity.Teacher" table="teacher">
        <id name="teacherId" column="teacher_id">
            <generator class="increment"/>
        </id>
        <property name="teacherName" column="teacher_name" length="255"/>
        <property name="teacherQualification" column="teacher_qualification" length="255"/>
        <property name="teacherExperience" column="experience_of_teaching" length="255"/>
        <property name="studentId" column="student_id"/>

    </class>
</hibernate-mapping>