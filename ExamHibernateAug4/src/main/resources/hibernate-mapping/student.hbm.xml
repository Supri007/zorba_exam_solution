<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="java.entity.Student" table="student">
        <id name="studentId" column="student_id">
            <generator class="increment"/>
        </id>
        <property name="studentName" column="stud_name" length="255"/>
        <property name="studentRollNo" column="stud_roll_number"/>
        <property name="subjectId" column="subject_id" length="255"/>

    </class>
</hibernate-mapping>